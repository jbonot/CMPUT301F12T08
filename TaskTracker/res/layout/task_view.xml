<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="60dp" >

        <Button
            android:id="@+id/buttonMyTasks"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:text="@string/myTasks"
            android:textSize="14dp" />

        <Button
            android:id="@+id/buttonCreateTask"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/buttonMyTasks"
            android:text="@string/create_a_task"
            android:textSize="14dp" />

        <Button
            android:id="@+id/buttonNotifications"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/buttonCreateTask"
            android:text="@string/notifications"
            android:textSize="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/buttons"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" >

        <TextView
            android:id="@+id/taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/taskNameHint"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskName"
            android:layout_marginRight="12dp"
            android:text="@string/deadline" />

        <TextView
            android:id="@+id/editDeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskName"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/viewDeadline"
            android:hint="@string/dateFormat"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/viewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editDeadline"
            android:text="@string/taskDescription" />

        <TextView
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/viewDescription"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical|top"
            android:hint="@string/taskDescriptionHint"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/viewRequirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editDescription"
            android:text="@string/requirements" />

        <CheckBox
            android:id="@+id/checkBoxText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/viewRequirements"
            android:layout_marginBottom="8dp"
            android:checked="true"
            android:enabled="false"
            android:text="@string/text" />

        <CheckBox
            android:id="@+id/checkBoxPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewRequirements"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/checkBoxText"
            android:enabled="false"
            android:text="@string/photo" />

        <TextView
            android:id="@+id/viewOtherMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxPhoto"
            android:text="@string/otherMembers" />

        <TextView
            android:id="@+id/otherMembers"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/viewOtherMembers"
            android:gravity="center_vertical|top"
            android:hint="@string/otherMembersHint"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/creationInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fulfillButton"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/creationInfo"
            android:textSize="14dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/fulfillButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/fulfill" />
    </RelativeLayout>

</RelativeLayout>